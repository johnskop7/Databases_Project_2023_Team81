<!DOCTYPE html>
<html>
<head>
    <title>Student Profile Page</title>
    <style>
        .container {
            width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f4f4f4;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .profile-info {
            margin-bottom: 20px;
        }

        .profile-info label {
            display: inline-block;
            width: 150px;
            font-weight: bold;
        }

        .profile-info span {
            display: inline-block;
            width: 400px;
        }

        .profile-buttons {
            text-align: center;
        }

        .profile-buttons button {
            padding: 5px 10px;
            background-color: #4CAF50;
            border: none;
            color: white;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 12px;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Student Profile</h2>
        <div class="profile-info">
            <label>Full Name:</label>
            <span><%= profile.fullname %></span>
        </div>
        <div class="profile-info">
            <label>Username:</label>
            <span><%= profile.username %></span>
        </div>
        <div class="profile-info">
            <label>Password:</label>
            <span><%= profile.password %></span>
        </div>
        <div class="profile-info">
            <label>Email:</label>
            <span><%= profile.email %></span>
        </div>
        <div class="profile-info">
            <label>Phone Number:</label>
            <span><%= profile.phone_number %></span>
        </div>
        <div class="profile-info">
            <label>Date of Birth:</label>
            <span><%= profile.date_of_birth.toISOString().split('T')[0] %></span>
        </div>
        <button onclick="goBack()">Go Back</button>
    </div>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
</body>
</html>
