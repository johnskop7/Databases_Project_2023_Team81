<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Book Form</title>
  <style>
    /* CSS styles here */
  </style>
  <script>
    function submitForm() {
      // Get the form element
      var form = document.getElementById("bookForm");

      // Get the values entered by the user
      var title = form.title.value;
      var category = form.category.value;
      var author = form.author.value;
      var copies = form.copies.value === "" ? null : parseInt(form.copies.value);

      // Pass the values to the desired function or perform any other action
      window.location.href = `/books_per_school?title=${title}&category=${category}&author=${author}&copies=${copies}`;
    }
  </script>
</head>
<body>
  <div class="container">
    <h1>Book Form</h1>

    <form id="bookForm" action="/books_per_school" method="get">
      <label for="title">Τίτλος:</label>
      <input type="text" id="title" name="title">

      <label for="category">Κατηγορία:</label>
      <input type="text" id="category" name="category">

      <label for="author">Συγγραφέας:</label>
      <input type="text" id="author" name="author">

      <label for="copies">Αντίτυπα:</label>
      <input type="number" id="copies" name="copies" min="0">

      <button type="button" onclick="submitForm()">Check</button>
    </form>
  </div>
</body>
</html>
